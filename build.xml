<?xml version="1.0"?>
<project name="sudoku" default="compile">
    <taskdef resource="checkstyletask.properties"  classpath="${lib.dir}/checkstyle-5.5-all.jar"/>
    <property file="props.properties"/>
    <target name="compile" depends="checkstyle">
        <javac destdir="." debug="yes" encoding="UTF8" includeantruntime="false">
            <src path="." />
        </javac>
    </target>
     <target name="checkstyle">
        <echo>Starting checkstyle</echo>
        <checkstyleconfig="google_checks.xml" failOnViolation="false">
            <fileset dir="./" includes="**/*.java"/>
            <formatter type="plain"/>
            <formatter type="xml" toFile="checkstyle_report.xml"/>
        </checkstyle>
        <echo>Checkstyle finished</echo>
    </target>
</project>
